<h1><%= @contact.full_name %>
</h1>

<p>
  <%= @contact.first_name %>
</p>
<p>
  <%= @contact.middle_name %>
</p>
<p>
  <%= @contact.last_name %>
</p>

<p>
  <%= @contact.email %>
</p>

<p>
  <%= @contact.japan_number %>
</p>

